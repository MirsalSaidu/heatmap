{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/register", "dest": "/register.html" },
    { 
      "src": "/dashboard", 
      "dest": "/api/auth-check?redirect=/dashboard.html" 
    },
    { 
      "src": "/admin", 
      "dest": "/api/auth-check?redirect=/admin.html&admin=true" 
    },
    { "src": "/", "dest": "/api/auth-check" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}
